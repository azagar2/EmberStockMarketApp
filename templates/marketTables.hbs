<div class = "container">
    <div class = "row">
        <div class = "col-md-6">
            <h3> Market by Order</h3>
            <div class = "col-md-6">
                <table class = "table table-hover table-bordered">
                    <thead>
                    <tr>
                        <th>Buy Volume</th>
                        <th>Buy Price</th>
                    </tr>
                    </thead>

                    <tbody>
                    {{#each order in model.buyOrders}}
                        <tr>
                            <td>{{order.size}}</td>
                            <td>{{order.price}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
            <div class = "col-md-6">
                <table class = "table table-hover">

                    <thead>
                    <tr>
                        <th>Sell Price</th>
                        <th>Sell Volume</th>
                    </tr>
                    </thead>

                    <tbody>
                    {{#each order in model.sellOrders}}
                        <tr>
                            <td>{{order.price}}</td>
                            <td>{{order.size}}</td>
                        </tr>
                    {{/each}}
                    </tbody>

                </table>
            </div>
        </div>

        <div class = "col-md-6">
            <h3> Market by Price</h3>
            <table class = "table table-hover">

                <thead>
                <tr>
                    <th>#</th>
                    <th>Buy Volume</th>
                    <th>Buy Price</th>
                </tr>
                </thead>

                <tbody>
                {{#each order in model.buyOrders}}
                    <tr>
                        <td>1</td>
                        <td>{{order.size}}</td>
                        <td>{{order.price}}</td>
                    </tr>
                {{/each}}
                </tbody>

            </table>
            <table class = "table table-hover">

                <thead>
                <tr>
                    <th>Sell Price</th>
                    <th>Sell Volume</th>
                    <th>#</th>
                </tr>
                </thead>

                <tbody>
                {{#each order in model.sellOrders}}
                    <tr>
                        <td>{{order.price}}</td>
                        <td>{{order.size}}</td>
                        <td>1</td>
                    </tr>
                {{/each}}
                </tbody>

            </table>
        </div>

    </div>


</div>




