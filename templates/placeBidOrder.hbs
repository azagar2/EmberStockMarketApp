<div class="container">
    <h2>Place Bid Order for {{model.name}} </h2>
    <form role="form">
        <div class="form-group">
            <label for="email">Number of Shares</label>
            <input type="email" class="form-control" id="volume" placeholder="Enter number">
        </div>
        <div class="form-group">
            <label for="pwd">Purchase Price</label>
            <input type="password" class="form-control" id="price" placeholder="Enter price">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
